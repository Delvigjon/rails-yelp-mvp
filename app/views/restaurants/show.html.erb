<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="text-center"><%= @restaurant.name %></h1>

      <p>
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @restaurant.category %>
      </p>

      <h2>Reviews</h2>

      <ul class="list-group">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><%= review.comment %> (Rating: <%= review.rating %>)</li>
        <% end %>
      </ul>

      <div class="mt-3">
        <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-secondary' %>
        <%= link_to 'Back', restaurants_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
